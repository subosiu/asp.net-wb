@{
	ViewData["Title"] = "登入";
}


<div style="background:#08311B;color:white; height:10vh;font-size:50px;display:flex;justify-content:flex-end; align-items:flex-end; padding:5px">買購</div>
<div style="background-image: url('/images/shoppingcart.png');
            background-size: cover;
            background-position: center;
            height:80vh;
            display:flex;
            justify-content:center;
            align-content:center;">
	<div id="container" style="width:90%; max-width:400px; max-height:80vh; margin:130px auto 0 auto; background:#f4b64c; border-radius:15px; font-family:Arial, sans-serif; box-shadow:0 4px 10px rgba(0,0,0,0.3); margin-bottom:100px">

		<div style="display:flex; height:10%;">
			<div id="memberTab" style="flex:2; background:#ff9c2e; color:white; display:flex; justify-content:center; align-items:center; cursor:pointer; transition: all 0.3s;border:1px solid black;border-top-left-radius:12px ;font-size:30px">
				會員
			</div>
			<div id="guestTab" style="flex:1; background:#3b0f0f; color:white; display:flex; justify-content:center; align-items:center; cursor:pointer; transition: all 0.3s;border:1px solid black;border-top-right-radius:12px;font-size:20px">
				訪客
			</div>
		</div>
		<form style="padding:20px; display:flex; flex-direction:column; gap:15px; border:1px solid black; border-top-left-radius:0; border-top-right-radius:0; border-bottom-left-radius:12px; border-bottom-right-radius:12px; height:90%;"
			  method="get" asp-controller="Home" asp-action="Privacy">
			<label style="font-size:25px">帳號:</label>
			<input type="text" placeholder="請輸入帳號" style="padding:10px; border-radius:20px; border:1px solid #ccc; outline:none;">
			<label style="font-size:25px">密碼:</label>
			<input type="password" placeholder="請輸入密碼" style="padding:10px; border-radius:20px; border:1px solid #ccc; outline:none;">
			<button type="submit" style="padding:10px; background:#333; color:white; border:none; border-radius:20px; cursor:pointer; font-weight:bold; margin-top:30px;">
				登入
			</button>
		</form>
	</div>
</div>
<div style="background:#08311b;height:10vh;"></div>

<script>
	const memberTab = document.getElementById("memberTab");
	const guestTab = document.getElementById("guestTab");

	memberTab.addEventListener("click", () => {
		memberTab.style.flex = "2";
		guestTab.style.flex = "1";
		memberTab.style.background = "#ff9c2e";
		guestTab.style.background = "#3b0f0f";
		memberTab.style.fontSize = '30px';
		guestTab.style.fontSize = '20px';
	});

	guestTab.addEventListener("click", () => {
		guestTab.style.flex = "2";
		memberTab.style.flex = "1";
		guestTab.style.background = "#ff9c2e";
		memberTab.style.background = "#3b0f0f";
		memberTab.style.fontSize = '20px';
		guestTab.style.fontSize = '30px';
	});
</script>
